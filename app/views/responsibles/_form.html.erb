<%= form_for(@responsible) do |f| %>
<% if @responsible.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@responsible.errors.count, "error") %> prohibited this responsible from being saved:</h2>

	<ul>
		<% @responsible.errors.full_messages.each do |message| %>
		<li>
			<%= message %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="field">
	<%= f.label :type_id %>
	<%= f.collection_select(:type_id, Responsible.responsible_types, :id, :name) %>
</div>

<%= render :partial=>"shared/form_person", 
:locals=>{:f=>f, 
	:object=> @responsible,
	:status=>Responsible.all_person_status} %>
	
<div class="field">
	<%= f.label t("label_responsible_students") %>
	<%= select_inout(f, @responsible, Student.get_all, :name) %>
</div>
<div class="actions">
	<div class="datagrid-actions">
	<%= f.submit %>
	</div>
</div>
<% end %>
