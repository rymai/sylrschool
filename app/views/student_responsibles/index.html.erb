<p id="notice"><%= notice %></p>

<h1>Listing Student Responsibles</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Responsible</th>
      <th>Custo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_responsibles.each do |student_responsible| %>
      <tr>
        <td><%= student_responsible.student_id %></td>
        <td><%= student_responsible.responsible_id %></td>
        <td><%= student_responsible.custo %></td>
        <td><%= link_to 'Show', student_responsible %></td>
        <td><%= link_to 'Edit', edit_student_responsible_path(student_responsible) %></td>
        <td><%= link_to 'Destroy', student_responsible, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

