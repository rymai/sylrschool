<!DOCTYPE html>
<html>
	<head>
		<title>Sylrschool</title>
		<%= stylesheet_link_tag "bootstrap" %>
		<%= stylesheet_link_tag "bootstrap-responsive" %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

		<%= stylesheet_link_tag "#{session[:theme]}/frame" %>
		<%= stylesheet_link_tag "#{session[:theme]}/scaffold" %>

		<%= csrf_meta_tags %>

		<script src="/ckeditor/ckeditor.js"></script>
		<script src="/javascripts/bootstrap.js" type="text/javascript"></script>

		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

		<script src="/javascripts/sylrplm_ext/sylrplm_extensions.js" type="text/javascript"></script>
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
		<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
	</head>
	<body id="sylr">
		<%= yield :form_errors %>
		<div id="container">
			<%= render(:partial => "layouts/frame")%>
		</div>

		<div>
			<p id="notice">
				<%= flash[:notice] %>
			</p>
			<p id="alert">
				<%= flash[:alert] %>
			</p>
		</div>

		<%= yield %>

	</body>
</html>
