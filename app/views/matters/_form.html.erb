<%= form_for(@matter) do |f| %>
<% if @matter.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@matter.errors.count, "error") %> prohibited this matter from being saved:</h2>

	<ul>
		<% @matter.errors.full_messages.each do |message| %>
		<li>
			<%= message %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="field">
	<%= f.label :name %>
	
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :matter_type %>
	
	<%= f.collection_select(:matter_type_id, Matter.matter_types, :id, :name) %>
</div>
<div class="field">
	<%= f.label :matter_duration %>
	
	<%= f.collection_select(:matter_duration_id, MatterDuration.get_all, :id, :name) %>
</div>
<div class="field">
	<%= f.label :matter_nb_max_student %>
	
	<%= f.number_field :matter_nb_max_student %>
</div>
<div class="field">
	<%= f.label :description %>
	
	<%= f.text_area :description %>
</div>
<div class="field">
	<%= f.label t("label_matter_teachers") %>
	<%= select_inout(f, @matter, Teacher.get_all, :name) %>
</div>

<div class="field">
	<%= f.label :custo %>
	
	<%= f.text_field :custo %>
</div>
<div class="actions">
	<div class="datagrid-actions">
	<%= f.submit %>
	</div>
</div>
<% end %>
